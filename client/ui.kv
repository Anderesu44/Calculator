#:import MDCard kivymd.uix.card
#:import SlideTransition kivy.uix.screenmanager.SlideTransition
<CButton@MDCard>
    radius: dp(5)
    padding: dp(10)
    md_bg_color: [0,0.33,0.33,1]
    line_color: 0,0,0,1
    orientation: 'vertical'
    text: ''
    ripple_behavior: True
    MDLabel:
        color:"#FFFFFF"
        text: root.text
        halign: 'center'
        pos_hint: {'center_y': 0.5}
<Ui>:
    MDScreen:
        md_bg_color: [0.33,0.33,0.33,1]
        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(10)
            spacing: dp(10)
            MDBoxLayout:
                size_hint: 1, .2
                orientation: 'vertical'
                line_color:0,0,0,1
                spacing: dp(0)
                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint: 1, .2
                    MDLabel:
                        id: subScreen
                        text: ""
                        size_hint: .9, 1
                        line_color:1,1,1,1
                        md_bg_color: [1,1,1,1]
                        halign:"right"
                        color:(0,0,0,1)
                    MDLabel:
                        id: opSubScreen
                        text: ""
                        size_hint: .1, 1
                        line_color:1,1,1,1
                        md_bg_color: [1,1,1,1]
                        halign:"center"
                        color:(0,0,0,1)
                MDLabel:
                    id: screen
                    text: "0"
                    size_hint: 1, .8
                    halign:"right"
                    line_color:1,1,1,1
                    md_bg_color: [1,1,1,1]
                    color:(0,0,0,1)
                    #text_hint: {'center_x': 0.5,'top': .1}
            MDGridLayout:
                cols: 4
                size_hint: 1, .8
                line_color:0,0,0,1
                CButton:
                    text: "C"
                    on_release:app.clear()
                CButton:
                    text: "%"
                    on_release:app.ops(op = 0)
                CButton:
                    text: "/"
                    on_release:app.ops(op = 1)
                CButton:
                    text: "Back"
                    on_release:app.sops(op = 0)
                CButton:
                    text: "7"
                    on_release:app.num(num=7)
                CButton:
                    text: "8"
                    on_release:app.num(num=8)
                CButton:
                    text: "9"
                    on_release:app.num(num=9)
                CButton:
                    text: "x"
                    on_release:app.ops(op = 2)
                CButton:
                    text: "4"
                    on_release:app.num(num=4)
                CButton:
                    text: "5"
                    on_release:app.num(num=5)
                CButton:
                    text: "6"
                    on_release:app.num(num=6)
                CButton:
                    text: "-"
                    on_release:app.ops(op = 3)
                CButton:
                    text: "1"
                    on_release:app.num(num=1)
                CButton:
                    text: "2"
                    on_release:app.num(num=2)
                CButton:
                    text: "3"
                    on_release:app.num(num=3)
                CButton:
                    text: "+"
                    on_release:app.ops(op = 4)
                CButton:
                    text: "+/-"
                    on_release:app.sops(op = 1)
                CButton:
                    text: "0"
                    on_release:app.num(num=0)
                CButton:
                    text: "."
                    on_release:app.sops(op = 2)
                CButton:
                    text: "="
                    on_release:app.result()
